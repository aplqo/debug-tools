{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: clang++ build active file(test)",
            "command": "/usr/bin/clang++",
            "args": [
                "-pthread",
                "-DAPTEST",
                "-I${workspaceFolder}",
                "-std=c++11",
                "-Wall",
                "-Wextra",
                "-Weffc++",
                "-Wdisabled-optimization",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "/usr/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "type": "shell",
            "label": "C/C++: clang++ build active file(debug)",
            "command": "/usr/bin/clang++",
            "args": [
                "-g",
                "-DAPDEBUG",
                "-std=c++11",
                "-Wall",
                "-Wextra",
                "-Weffc++",
                "-Wdisabled-optimization",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "/usr/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        }
    ]
}