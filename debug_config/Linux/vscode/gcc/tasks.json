{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: g++ build active file(test)",
			"command": "/usr/bin/g++",
			"args": [
				"-DAPTEST",
				"${file}",
				"-I${workspaceFolder}",
				"-L${workspaceFolder}/lib",
				"-Wl,--rpath=${workspaceFolder}",
				"-ljudge",
				"-lsystem_min",
				"-lrt",
				"-lbacktrace",
				"-ldl",
				"-std=c++11",
				"-Wall",
				"-Wextra",
				"-Weffc++",
				"-Wdisabled-optimization",
				"-g",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}"
			],
			"options": {
				"cwd": "/usr/bin"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build"
		},
		{
			"type": "cppbuild",
			"label": "C/C++: g++ build active file(debug)",
			"command": "/usr/bin/g++",
			"args": [
				"-g",
				"-DAPDEBUG",
				"-std=c++11",
				"-Wall",
				"-Wextra",
				"-Weffc++",
				"-Wdisabled-optimization",
				"${file}",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}"
			],
			"options": {
				"cwd": "/usr/bin"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build"
		}
	]
}