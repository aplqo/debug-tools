{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "C/C++: g++ build active file(test)",
			"command": "/usr/bin/g++",
			"args": [
				"-DAPTEST",
				"-lpthread",
				"-I${workspaceFolder}",
				"-std=c++11",
				"${file}",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}"
			],
			"options": {
				"cwd": "/usr/bin"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build"
		},
		{
			"type": "shell",
			"label": "C/C++: g++ build active file(debug)",
			"command": "/usr/bin/g++",
			"args": [
				"-g",
				"-DAPDEBUG",
				"-std=c++11",
				"${file}",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}"
			],
			"options": {
				"cwd": "/usr/bin"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build"
		}
	]
}