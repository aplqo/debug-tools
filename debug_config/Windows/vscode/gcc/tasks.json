{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "g++.exe build active file(test)",
            "command": "C:\\MingW\\bin\\g++.exe",
            "args": [
                "${file}",
                "-DAPTEST",
                "-std=c++11",
                "-Wall",
                "-Wextra",
                "-Weffc++",
                "-Wdisabled-optimization",
                "-g",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "C:\\MingW\\bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "type": "shell",
            "label": "g++.exe build active file(debug)",
            "command": "C:\\MingW\\bin\\g++.exe",
            "args": [
                "${file}",
                "-std=c++11",
                "-DAPDEBUG",
                "-Wall",
                "-Wextra",
                "-Weffc++",
                "-Wdisabled-optimization",
                "-g",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "C:\\MingW\\bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        }
    ]
}