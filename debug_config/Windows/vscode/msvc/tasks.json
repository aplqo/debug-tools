{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "cl.exe build active file(test)",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/DAPTEST", // add /MT or /MD depend on build is static or shared
                "/D_CRT_SECURE_NO_WARNINGS",
                "/W4",
                "/Zc:__cplusplus",
                "/Fe:",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "${workspaceFolder}\\lib\\judge-lib.lib",
                "${workspaceFolder}\\lib\\system-lib.lib",
                "${file}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": "build"
        },
        {
            "type": "shell",
            "label": "cl.exe build active file(debug)",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/Zc:__cplusplus",
                "/D_CRT_SECURE_NO_WARNINGS",
                "/W4",
                "/DAPDEBUG",
                "/Fe:",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "${file}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": "build"
        }
    ]
}