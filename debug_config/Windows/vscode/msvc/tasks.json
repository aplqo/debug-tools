{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "cl.exe build active file(test)",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/DAPTEST",
                "/D_CRT_SECURE_NO_WARNINGS",
                "/W4",
                "/Zc:__cplusplus",
                "/Fe:",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "${file}"
            ],
            "problemMatcher": [
                "$msCompile"
            ],
            "group": "build"
        },
        {
            "type": "shell",
            "label": "cl.exe build active file(debug)",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/Zc:__cplusplus",
                "/D_CRT_SECURE_NO_WARNINGS",
                "/W4",
                "/DAPDEBUG",
                "/Fe:",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "${file}"
            ],
            "problemMatcher": [
                "$msCompile"
            ],
            "group": "build"
        }
    ]
}